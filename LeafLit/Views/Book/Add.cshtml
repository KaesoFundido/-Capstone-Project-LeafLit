@model LeafLit.ViewModels.AddBookViewModel

<h1>Add Book</h1>

<form asp-controller="Book" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
        <span asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genres"></label>
        <select asp-for="GenreID" asp-items="Model.Genres"></select>
    </div>

    <input type="submit" value="Add Book" />
</form>
