@model LeafLit.ViewModels.FindBookViewModel
@{
    ViewData["Title"] = "FindBook";
}

<h1>Find Book</h1>

<form asp-controller="Book" asp-action="FindBook" method="post">

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input class="form-control" asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <label asp-for="ISBN">ISBN</label>
        <input class="form-control" asp-for="ISBN" />
        <span asp-validation-for="ISBN"></span>
    </div>


    <input type="submit" value="Find Book" />
</form>
